<h1>Carrito</h1>
{{#if cart.products.length}}
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
        </tr>
    </thead>
    <tbody>
        {{#each cart.products}}
        <tr>
            <td>{{this._id.title}}</td>
            <td>{{this._id.price}}</td>
            <td>{{this.quantity}}</td>
        </tr>
        {{/each}}
</table>
{{else}}
<p>No hay productos en el carrito</p>
{{/if}}