<h1>Hola {{user.first_name}}</h1>
<p>rol: {{user.role}}</p>
<a href="/users"><button>Configuración usuarios</button></a>
<a href="/carts/{{user.cart}}"><button>Mi Carrito</button></a>
<button id="logoutButton">Cerrar sesión</button>
<h2>Estos son todos nuestros productos</h2>
{{#each products}}
    <div class="product">
    </div>
        <h2>{{title}}</h2>
        <img src={{thumbnails}} alt={{title}} width="100" height="100">
        <p>{{description}}</p>
        <p>Price: {{price}}</p>
        <p>{{category}}</p>
        <form action='api/carts/{{../user.cart}}/product/{{_id}}' method="POST">
            <input type="submit" value="Add to cart">
        </form>
    </div>
{{/each}}
{{#if prevLink}}
  <a href="{{prevLink}}">Previous Page</a>
{{/if}}
{{#if nextLink}}
  <a href="{{nextLink}}">Next Page</a>
{{/if}}

<script src="/js/products.js"></script>