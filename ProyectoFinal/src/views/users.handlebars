<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Usuarios</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td>{{this.first_name}}</td>
              <td>{{this.last_name}}</td>
              <td>{{this.email}}</td>
              <td>{{this.role}}</td>
              <td>
                <button
                  class="btn btn-primary"
                  onclick="changeRole('{{this._id}}')"
                >Editar rol</button>
                <button
                  class="btn btn-danger"
                  onclick="deleteUser('{{this._id}}')"
                >Eliminar</button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<script src="/js/users.js"></script>