<h1>Todos los productos</h1>

{{#each products}}
    <div class="product">

    </div>
        <h2>{{title}}</h2>
        <img src={{thumbnails}} alt={{title}} width="100" height="100">
        <p>{{description}}</p>
        <p>Price: {{price}}</p>
        <p>{{category}}</p>
        <form action='api/carts/64a9c19ac02d171cd2e8b40d/product/{{_id}}' method="POST">
            <input type="submit" value="Add to cart">
        </form>
    </div>
{{/each}}
{{#if prevLink}}
  <a href="{{prevLink}}">Previous Page</a>
{{/if}}
{{#if nextLink}}
  <a href="{{nextLink}}">Next Page</a>
{{/if}}
<script src="/js/products.js"></script>